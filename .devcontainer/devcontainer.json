{
  "name": "Python 3.9",
  "image": "mcr.microsoft.com/devcontainers/python:3.9-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "jupyter/app_dem.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f path/to/your/requirements.txt ] && pip3 install --user -r path/to/your/requirements.txt; pip3 install --user streamlit; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "streamlit run jupyter/app_dem.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}
